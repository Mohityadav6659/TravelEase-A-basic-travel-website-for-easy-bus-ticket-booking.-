<!-- views/home.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home | Travel Planner</title>

    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <!-- Font Awesome Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />

    <!-- CSS -->
    <link rel="stylesheet" href="/styles/home.css" />
  </head>
  <body>
    <header>
      <div class="navbar">
        <h1 class="logo"><a href="/">Travel Planner</a></h1>
        <nav>
          <ul>
            <li><a href="/plan">Plan Your Journey</a></li>
            <li><a href="/manage">Manage My Booking</a></li>
            <li><a href="/help">Help</a></li>
          </ul>
        </nav>
      </div>
    </header>

    <!-- views/home.ejs -->
    <section class="hero">
      <div class="hero-content">
        <h2>Low-cost travel by bus</h2>
        <p>Plan your journey and book a trip easily with Travel Planner!</p>

        <!-- Form for searching trips -->
        <form action="/plan" method="POST">
          <div class="form-group">
            <label for="from">From:</label>
            <input
              type="text"
              name="from"
              id="from"
              placeholder="City of Departure"
              required
            />
          </div>
          <div class="form-group">
            <label for="to">To:</label>
            <input
              type="text"
              name="to"
              id="to"
              placeholder="Destination"
              required
            />
          </div>
          <div class="form-group">
            <label for="date">Date:</label>
            <input type="date" name="date" id="date" required />
          </div>
          <div class="form-group">
            <label for="passengers">Passengers:</label>
            <select name="passengers" id="passengers" required>
              <option value="1">1 Adult</option>
              <option value="2">2 Adults</option>
              <option value="3">3 Adults</option>
            </select>
          </div>
          <button type="submit" class="btn">Search</button>
        </form>
      </div>
    </section>

    <footer>
      <p>&copy; 2024 Travel Planner. All rights reserved.</p>
    </footer>
  </body>
</html>
